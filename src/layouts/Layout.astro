---
import Navbar from "../components/Navbar.astro";
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
        <style is:global>
            :root {
                --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
                --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
                --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

                --color-text: hsl(12, 5%, 4%);
                --color-bg: #f6f6f6;
                --primary: #fb988e;
                --secondary: #114171;
            }

            html {
                font-family: system-ui, sans-serif;
                font-size: var(--font-size-base);
                color: var(--color-text);
                background-color: var(--color-bg);
            }

            :global(h1) {
                font-size: var(--font-size-xl);
            }

            :global(h2) {
                font-size: var(--font-size-lg);
            }

            :global(code) {
                font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
                    DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
                    monospace;
            }
            :root {
                --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
                --link-gradient: linear-gradient(
                    45deg,
                    #4f39fa,
                    #da62c4 30%,
                    var(--color-border) 60%
                );
                --night-sky-gradient: linear-gradient(
                    0deg,
                    #392362 -33%,
                    #431f69 10%,
                    #30216b 50%,
                    #1f1638 100%
                );
                --matteo-gradient: linear-gradient(
                    0deg,
                    var(--secondary) 0%,
                    var(--primary) 33%,
                    var(--secondary) 66%,
                    var(--primary) 99%
                );
                --bkg-gradient: linear-gradient(
                    45deg,
                    var(--secondary) 0%,
                    #a1c8e9 30%,
                    var(--color-border) 60%
                );
            }
            body {
                max-width: 100ch;
                margin: auto;
                padding: 1.5rem;
            }
            .subtitle {
                color: var(--secondary);
                padding: 0.3rem;
            }

            .link-card {
                margin: 0.5rem;
                display: block;
                background-size: 400%;
                border-radius: 0.5rem;
                background-position: 100%;
                /*transition: background-position 0.6s
                    cubic-bezier(0.22, 1, 0.36, 1);
                    */
            }

            .link-card > p {
                width: 100%;
                text-decoration: none;
                line-height: 1.4;
                padding-left: 0.5rem;
                padding-right: 0.5rem;
                padding-top: 0;
                padding-bottom: 0;
                border-radius: 0.35rem;
                color: var(--text-color);
                background-color: white;
                opacity: 0.8;
            }
            /*
            .link-card:is(:hover, :focus-within) {
                background-position: 0;
            }

            .link-card:is(:hover, :focus-within) h2 {
                color: #fff;
            }

            .link-card:is(:hover, :focus-within) h2 span {
                transform: translateX(2px);
            }
*/
            .item {
                text-decoration: none;
                line-height: 1.4;
                border-radius: 0.35rem;
                color: var(--text-color);
                background-color: white;
                opacity: 0.8;
                padding-left: 0.8rem;
                padding-right: 0.8rem;
                padding-top: 0;
                margin: 0 0.5rem 0.5rem 0;
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                    0 2px 4px -2px rgba(0, 0, 0, 0.1);
            }
            .item > p {
                padding: 1rem;
                margin-top: 0%;
            }
            h4 {
                margin: 0rem;
                padding-top: 1.2rem;
            }
            h5 {
                color: gray;
                margin: 0rem;
                padding: 0.2rem;
            }
            details {
                padding-top: 1rem;
                padding-bottom: 1rem;
            }
            .container {
                display: flex; /* or inline-flex */
                justify-content: space-evenly;
                flex-wrap: wrap;
                padding-bottom: 0.5rem;
            }
            .skill.primary {
                font-size: smaller;
                padding: 0.2rem 0.8rem 0.2rem 0.8rem;
                border-radius: 1rem;
                text-align: center;
                color: white;
                background-color: var(--secondary);
                color: var(--primary);
                margin: 0.2rem;
            }
            .skill.secondary {
                font-size: smaller;
                padding: 0.2rem 0.8rem 0.2rem 0.8rem;
                border-radius: 1rem;
                text-align: center;
                color: white;
                background-color: var(--primary);
                color: var(--secondary);
                margin: 0.2rem;
            }
            span {
            }
            .navbar {
                padding-top: 0.5rem;
                position: sticky;
                top: 0px;
                z-index: 1;
                background-color: #f6f6f6;
                display: flex;
                gap: 1rem;
                padding: 0.5rem 0 0.5rem 0;
                margin-top: 1rem;
            }
            .nav-item {
                display: inline;
                width: 20ch;
                text-align: center;
                border-radius: 0.5rem;
                background: linear-gradient(
                    -45deg,
                    #ffffff 0%,
                    var(--primary) 100%
                );
                color: var(--secondary);
            }
            .nav-item:is(:hover, :focus-within) {
                box-shadow: 2px 4px 6px -1px var(--secondary),
                    2px 2px 4px -2px #054686;
            }
            .openbtn {
                display: none;
            }
            @media screen and (max-width: 910px) {
                .openbtn {
                    display: block;
                    border: 0;
                    width: 100%;
                    border-radius: 0.5rem;
                    background: linear-gradient(
                        -45deg,
                        #ffffff 0%,
                        var(--primary) 100%
                    );
                    color: var(--secondary);
                }
                .navbar {
                    display: none;
                }
            }
            .name-gradient {
                background: linear-gradient(
                    45deg,
                    var(--primary) -1.72%,
                    var(--secondary) 99.78%
                );
                background-size: auto;
                background-clip: border-box;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                text-fill-color: transparent;
                background-size: 150% 150%;
                -webkit-animation: gradient 15s ease infinite;
                animation: gradient 15s ease infinite;
            }
            .name {
                color: var(--primary);
            }
            .surname {
                color: var(--secondary);
            }

            @keyframes pulse {
                0%,
                100% {
                    background-position-y: 0%;
                }

                50% {
                    background-position-y: 80%;
                }
            }

            .presentation-grid {
                display: flex; /* or inline-flex */
                justify-content: space-evenly;
                flex-wrap: wrap-reverse;
                padding-bottom: 0.5rem;
            }

            .presentation-text {
                flex: 0.7;
            }

            .presentaion-avatar {
                margin: auto;
            }
            .presentaion-avatar img {
                background-size: cover;
                background-position: center;
                border-radius: 50%;
                border: 0em solid var(--primary);
                box-shadow: 0 0.1em 1em -0.1em var(--secondary);
                width: 20vw;
                min-width: 160px;
                max-width: 250px;
                display: flex;
                align-items: center;
                justify-content: center;

                text-align: center;
            }
            h1 {
                font-size: 3.5rem;
            }
            .hint {
                position: fixed;
                bottom: 2%;
                right: 2%;
                z-index: 1;
                background-color: white;
                border: solid 0.2rem white;
                border-radius: 50%;
                width: 3rem;
                height: 3rem;
                box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.6);
                transition: all 0.3s ease 0s;
                cursor: pointer;
            }
            .hint:hover {
                background-color: var(--primary);
                border: solid 0.2rem var(--primary);
                box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.6);
                color: #000;
                transform: translateY(-7px);
            }
            .icon {
                border: 0;
                width: 2rem;
                height: 2rem;
            }
            @media print and (color) {
                .name-gradient {
                    -webkit-text-fill-color: var(--primary) !important;
                    background: none;
                }
                .navbar {
                    display: none;
                }
                .hint {
                    display: none;
                }
                .icon {
                    display: none;
                }
            }
        </style>
    </body>
</html>
